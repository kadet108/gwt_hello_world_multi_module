<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	
	<persistence-unit name="testunit" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>com.blusoft.blucargo.model.AcceptedOffer</class>
		<class>com.blusoft.blucargo.model.CarBody</class>
		<class>com.blusoft.blucargo.model.CargoOffer</class>
		<class>com.blusoft.blucargo.model.Country</class>
		<class>com.blusoft.blucargo.model.City</class>
		<class>com.blusoft.blucargo.model.SearchCriteria</class>
		<class>com.blusoft.blucargo.model.Comment</class>
		<class>com.blusoft.blucargo.model.EndedOffer</class>
		<class>com.blusoft.blucargo.model.FavouriteOffer</class>
		<class>com.blusoft.blucargo.model.OfferAcceptance</class>
		<class>com.blusoft.blucargo.model.CommentAndOffer</class>
		<class>com.blusoft.blucargo.model.RegistrationData</class>

		<shared-cache-mode>ENABLE_SELECTIVE</shared-cache-mode>
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.generate_statistics" value="true" />
		</properties>
	</persistence-unit>

	
</persistence>
